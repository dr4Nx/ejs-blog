<%- include('partials/header') %>

<% if (locals.post) { %>
  <div class="container">
    <h1 class="my-5"><%= post.title %></h1>
    <p><%= post.content %></p>
  </div>
<% } else { %>
  <div>
    <h1>No Post Found</h1>
  </div>
<% } %>

<% if (locals.post) { %>
  <div class="container">
  <form action="/delete" method="POST" style="display: inline;">
    <input type="hidden" name="title" value="<%= post.title %>">
    <button class="btn btn-primary btn-lg px-4 gap-3 my-5" type="submit">Delete Post</button>
  </form>
  <form action="/edit" method="POST" style="display: inline;">
    <input type="hidden" name="title" value="<%= post.title %>">
    <button class="btn btn-primary btn-lg px-4 gap-3" type="submit">Edit Post</button>
  </form>
  </div>
<% } %>

<%- include('partials/footer') %>